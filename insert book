#include <stdio.h>

struct Book {
    int book_id;
    char title[50];
    char author[50];
    float price;
};

int main() {
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.book_id);

    printf("Enter Book Title: ");
    scanf("%s", b.title);

    printf("Enter Author Name: ");
    scanf("%s", b.author);

    printf("Enter Price: ");
    scanf("%f", &b.price);

    printf("\nBook Details Inserted Successfully\n");
    printf("ID: %d\nTitle: %s\nAuthor: %s\nPrice: %.2f\n",
           b.book_id, b.title, b.author, b.price);

    return 0;
}
